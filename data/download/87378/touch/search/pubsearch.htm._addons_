<!--{if !empty($srchtype)}--><input type="hidden" name="srchtype" value="$srchtype"/><!--{/if}-->
<div class="search" style="background-color: white">
    <table width="100%" cellspacing="0" cellpadding="0">
        <tbody>
        <tr>
            <td width="30" style="padding-left: 10px">
                <svg style="vertical-align: middle" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="18"
                     height="18">
                    <path fill="none" d="M0 0h24v24H0z"/>
                    <path fill="#909399"
                          d="M11 2c4.968 0 9 4.032 9 9s-4.032 9-9 9-9-4.032-9-9 4.032-9 9-9zm0 16c3.867 0 7-3.133 7-7 0-3.868-3.133-7-7-7-3.868 0-7 3.132-7 7 0 3.867 3.132 7 7 7zm8.485.071l2.829 2.828-1.415 1.415-2.828-2.829 1.414-1.414z"/>
                </svg>
            </td>
            <td>
                <input value="$keyword" autocomplete="off" class="input" name="srchtxt"
                       id="scform_srchtxt"
                       style="outline:none;"
                       placeholder="{lang searchthread}">
                <input type="hidden" name="searchsubmit" value="yes">
            </td>
            <td width="30" style="padding:0 10px;text-align: right;">
                <span onclick="back()">取消</span>
            </td>
        </tr>
        </tbody>
    </table>
</div>
<script>
    function back(){
        window.history.back();
    }
</script>
